<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css">

    <title>New Movie</title>
    <style>
        body {
            padding: 50px;
        }
    </style>

</head>

<body>
        <div class="header">
        <a href="/">Home</a>
        <!-- <a href="/movies/add-form">New Image</a> -->
    </div>

<div class="container">
  <form action="/movies/add-form" method="POST">
    <h1>Agregar Nueva Película</h1>

    <% if (typeof msg !== 'undefined' && msg) { %>
      <div class="message-box" style="color: <%= color%>;">
        <%= msg %>
      </div>
    <% } %>

    <label for="title">Título*:</label>
    <input type="text" id="title" name="title" required maxlength="60">

    <label for="year">Año:</label>
    <input type="number" id="year" name="year" min="1800" max="2030">

    <label for="type">Tipo*:</label>
    <input type="text" id="type" name="type" placeholder="Ej: movie" required>

    <label for="genres">Géneros (separados por comas):</label>
    <input type="text" id="genres" name="genres" placeholder="Ej: Drama,Action">

    <label for="urlImage">URL del Poster*:</label>
    <input type="url" id="urlImage" name="urlImage" required placeholder="Ej: https://example.com/poster.jpg"> 

    <button type="submit">Añadir Película</button>
    <p>* Campos obligatorios</p>
  </form>
</div></body>

</html>